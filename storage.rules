rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Soru görselleri - questions/{userId}/{fileName}
    match /questions/{userId}/{allPaths=**} {
      // Kullanıcı sadece kendi klasörüne yazabilir
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
      
      // Okuma herkes için açık (görseller public)
      allow read: if true;
    }

    // Forum görselleri - forum_images/{fileName}
    match /forum_images/{fileName} {
      // Giriş yapmış kullanıcılar yükleyebilir (isim userId içerir)
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Okuma herkes için açık
      allow read: if request.auth != null;
    }
  }
}
